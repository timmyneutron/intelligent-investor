{
  "name": "intelligent-investor-v2",
  "private": true,
  "workspaces": ["client", "server", "mcp-server"],
  "scripts": {
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "dev:mcp": "npm run dev --workspace=mcp-server",
    "dev:mcp-python": "cd mcp-server-python && source .venv/bin/activate && python -m src.server",
    "dev:agent": "cd agent && .venv/bin/python -m src",
    "dev:agent:local": "cd agent && .venv/bin/python -m src --local"  }
}
